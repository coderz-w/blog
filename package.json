{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "set ANALYZE=false && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"src/**/*.{js,ts,jsx,tsx}\" --fix",
    "lint:ci": "eslint \"src/**/*.{js,ts,jsx,tsx}\"",
    "format": "prettier --write .",
    "format:ci": "prettier --list-different \"**/*.{ts,tsx,js,jsx}\"",
    "prepare": "husky",
    "analyze": "set ANALYZE=true && set BUNDLE_ANALYZE=browser && npm run build"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^14.2.15",
    "@types/prettier": "^3.0.0",
    "next": "14.2.15",
    "prettier": "3.3.2",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/lint-staged": "^13.3.0",
    "@types/node": "^20.16.11",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.15",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.5",
    "lint-staged": "15.2.10",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "5.4.5"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "pnpm lint",
      "pnpm format"
    ]
  },
  "engines": {
    "node": ">=18",
    "pnpm": "=9.4.0"
  },
  "nextBundleAnalysis": {
    "budget": 358400,
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold":102400,
    "showDetails": true
  }
}